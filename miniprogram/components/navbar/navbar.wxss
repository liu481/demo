/* components/navbar/navbar.wxss */
.navbar {
  width: 100%;
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}

.navbar-title {
  height: 40px;
}

.navbar-title .title {
  color: #333;
  height: 40px;
  width: 64%;
  line-height: 46px;
  font-size: 14px;
  text-align: left;
  margin-left: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.navbar-menu {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0px 3px 4px 0px rgba(145, 145, 145, 0.15);
}
.navbar-menu .menu-l {
  display: flex;
}
.navbar-menu .menu-l .menu {
  width: 36rpx;
  margin-left: 30rpx;
}
.navbar-menu .menu-l .menu .menu-icon {
  display: inline-block;
  width: 36rpx;
  height: 28rpx;
  background: url(https://static.21cake.com/themes/wap/img/top-icon.png) no-repeat;
  background-size: cover;
  vertical-align: middle;
}
.navbar-menu .menu-l .city {
  margin-left: 28rpx;
}
.navbar-menu .menu-l .city .city-icon {
  display: inline-block;
  width: 24rpx;
  height: 30rpx;
  background: url(https://static.21cake.com/themes/wap/img/address.png) no-repeat;
  background-size: cover;
  vertical-align: -6rpx;
  margin-right: 8rpx;
}

.navbar-menu .menu-c {
  margin-left: -40rpx;
}
.navbar-menu .menu-c .logo {
  display: inline-flex;
  vertical-align: middle;
}
.navbar-menu .menu-c .logo .logo-img {
  display: inline-block;
  width: 60rpx;
  height: 49rpx;
}
.navbar-menu .menu-r {
  display: flex;
  margin-right: 14rpx;
}
.navbar-menu .menu-r .nav {
  margin: 0 16rpx 0 8rpx;
}
.navbar-menu .menu-r .nav .img {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  background: url(https://static.21cake.com/themes/wap/img/cart.png) no-repeat;
  background-size: cover;
}
.navbar-menu .menu-r .nav.msg .img {
  background: url(https://static.21cake.com/themes/wap/img/header_message.png) no-repeat;
  background-size: cover;
}

.menu-nav {
  display: flex;
  justify-content: space-between;
  background: #fff;
  box-shadow: 0px 3px 4px 0px rgba(145, 145, 145, 0.3);
  overflow: hidden;
  position: absolute;
  top: 216rpx;
  left: 0;
  right: 0;
}
.menu-nav .menu {
  width: 33%;
  text-align: center;
  padding: 10rpx 0 4rpx 0;
}
.menu-nav .menu .a .img {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}
.menu-nav .menu .a .title {
  font-size: 26rpx;
  line-height: 32rpx;
}

.city-box {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 11;
  background: #0007;
}
.city-box .i {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 8;
}
.city-box .city-list {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 9;
  transform: translate(-50%,-50%);
  background: #fff;
  width: 94%;
  border-top: 6rpx solid #442818;
}
.city-box .city-list .p {
  line-height: 50rpx;
  font-size: 36rpx;
  padding: 50rpx 28rpx 60rpx;
}
.city-box .city-list .ul {
  display: flex;
  flex-wrap: wrap;
}
.city-box .city-list .ul .city {
  width: 22%;
  margin: 1.5%;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #fff;
  box-sizing: border-box;
}
.city-box .city-list .ul .city.on {
  border-color: #442818;
  background: #fff url(https://static.21cake.com/themes/wap/img/icon_selected.png) no-repeat top left;
  background-size: 12px 12px;
}

.city-box .city-list .btn-city {
  background: #442818;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  width: 256rpx;
  margin: 70rpx auto 24rpx;
}
.city-box .city-list .txt {
  height: 36rpx;
  line-height: 36rpx;
  color: #D5BFA7;
  text-align: center;
  padding-bottom: 70rpx;
}