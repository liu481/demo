/* pages/gallery/gallery.wxss */
.sort {
  width: 100%;
  font-size: 24rpx;
  color: #442818;
}
.sort .sort-nav {
  display: flex;
  overflow: auto;
  font-size: 28rpx;
  color: #707070;
  background: #fff;
}
.sort .sort-nav::-webkit-scrollbar {
  display:none
}
.sort .sort-nav .sort-item {
  flex-shrink: 0;
}
.sort .sort-nav .sort-item .span {
  line-height: 80rpx;
  margin: 0 50rpx;
  border-bottom: 4rpx solid #fff;
}
.sort .sort-nav .sort-item .span.on{
  color: #442818;
  border-color: #442818;
}
.sort .sort-desc {
  padding: 16rpx 0;
  height: 60rpx;
  line-height: 30rpx;
  text-align: center;
  background: rgba(213,191,167,0.10);
  border-bottom: 2rpx solid #E9E9E9;
}
.sort .sort-desc .h3 {
  font-size: 30rpx;
  color: #442818;
}
.sort .sort-desc .p {
  font-size: 20rpx;
  line-height: 26rpx;
  margin: 4rpx 0 0;
  color: #D5BFA7;
}