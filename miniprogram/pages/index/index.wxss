/**index.wxss**/
.swiper {
  height: 400rpx;
}
.swiper-item .img {
  display: block;
  width: 100%;
  height: 400rpx;
}

.home-content {
  margin: 0 28rpx;
}
.home-content .lists-box {
  margin: 18rpx 0;
  display: flex;
}
.home-content .lists-box .list-item {
  margin-right: 16rpx;
  line-height: 36rpx;
  color: #C69C6D;
  font-size: 24rpx;
}
.home-content .lists-box .list-item .icon {
  display: inline-block;
  height: 28rpx;
  width: 28rpx;
  margin-top: -2px;
  vertical-align: middle;
  background: url(https://static.21cake.com/themes/wap/img/new-home-icon.png) no-repeat;
  background-position: 0 -15px;
  background-size: 90px auto;
}

.home-content .home-menu {
  display: flex;
  justify-content: space-between;
}
.home-content .home-menu .menu-item {
  width: 19%;
  line-height: 0.32rem;
  text-align: center;
  margin: 5px 0;
}
.home-content .home-menu .menu-item .a {
  color: #442818;
  height: 120rpx;
  font-size: 24rpx;
}
.home-content .home-menu .menu-item .a .img {
  display: block;
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto 10rpx;
}

.mould-goods {
  padding-top: 20rpx;
  margin: 0 12rpx;
}
.goods-content {
  border-top: 1px solid #E5E5E5;
}
.goods-content .goods-head {
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.goods-content .goods-head .head-title {
  color: #322418;
  display: inline-block;
  height: 40rpx;
  font-size: 26rpx;
  background: #F4EBE2;
  border-radius: 100px;
  padding: 0 20rpx;
  line-height: 40rpx;
}
.goods-content .goods-head .a {
  color: #808080;
  font-size: 24rpx;
}
.goods-content .goods-list {
  margin-top: 20rpx;
}
.goods-content .goods-list .goods-item {
  margin-bottom: 40rpx;
  background: #FFF;
  border: 1px solid #F2EAE4;
  box-shadow: 0 4px 12px 0 rgba(0,0,0,0.06);
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.goods-content .goods-list .goods-item .img {
  display: block;
  width: 100%;
  height: 294rpx;
}
.goods-content .goods-list .goods-item .goods-info {
  margin: 20rpx 20rpx 28rpx 20rpx;
}
.goods-content .goods-list .goods-item .goods-info .goods-title {
  display: flex;
  font-size: 24rpx;
}
.goods-content .goods-list .goods-item .goods-info .goods-title .title {
  font-weight: bold;
  font-size: 15px;
  color: #322418;
  margin-right: 8px;
}
.goods-content .goods-list .goods-item .goods-info .goods-title .price {
  font-size: 15px;
  color: #C69C6D;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
}
.goods-content .goods-list .goods-item .goods-info .goods-title .gram {
  color: #A6A6A6;
}
.goods-content .goods-list .goods-item .goods-info .goods-desc {
  font-size: 24rpx;
  line-height: 34rpx;
  margin-top: 14rpx;
}
.goods-content .goods-list .goods-item .cart {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 90rpx;
  height: 90rpx;
  background: url(https://static.21cake.com/themes/wap/img/new-home-icon.png) no-repeat;
  background-position: -35px 3px;
  background-size: 80px auto;
}

.goods-content .activity .goods-item {
  border: none;
  background: none;
  margin-left: 6rpx;
}
.goods-content .activity .a {
  display: flex;
}
.goods-content .activity .a .left {
  width: 40%;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-content .activity .a .left .h3 {
  font-size: 30rpx;
  line-height: 44rpx;
  margin-top: 24rpx;
  height: 44rpx;
}
.goods-content .activity .a .left .p {
  font-size: 24rpx;
  color: #999;
}
.goods-content .activity .a .left .bot {
  font-size: 26rpx;
  color: #C2A185;
  margin-bottom: 26rpx;
}
.goods-content .activity .a .right {
  width: 60%;
}
.goods-content .activity .a .right .img {
  display: block;
  width: 100%;
}
.goods-content .activity .magaize {
  padding: 20rpx 0;
  display: flex;
  overflow: auto;
  box-shadow: none;
}
.goods-content .activity .magaize .li {
  flex-shrink: 0;
  width: 450rpx;
  height: 350rpx;
  margin: 0 10rpx;
  box-shadow: 0 0 10rpx 0 rgba(0,0,0,0.10);
  border-radius: 10rpx;
}
.goods-content .activity .magaize .li:first-child {
  margin-left: 0;
}
.goods-content .activity .magaize .li .image {
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
}
.goods-content .activity .magaize .li .image .img {
  display: block;
  width: 100%;
  height: 240rpx;
}
.goods-content .activity .magaize .li .h3 {
  font-size: 30rpx;
  color: #383838;
  margin: 26rpx 0 0;
  height: 44rpx;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-content .activity .magaize .li .p {
  line-height: 36rpx;
  height: 44rpx;
  color: #A6A6A6;
  margin: 0 0 12rpx;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-content .activity .magaize .li.more {
  width: 200rpx;
  line-height: 350rpx;
  text-align: center;
  font-size: 30rpx;
}